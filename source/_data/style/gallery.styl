
.post-gallery .post-gallery-image {
  width: 100%;
  height: 0;
  padding-top: 40%;
  position: relative;

  img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: none;
    border-radius: 2px;
    box-shadow: 0 0 4px #222;
  }
}
