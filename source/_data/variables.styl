$font-family-monospace    = Monaco, Consolas, Menlo, $font-family-chinese, monospace

$font-family-sans-serif   = Recursive, sans-serif

// Cursors
$cursor-default = url('https://wayowe.com/s/mouse/angelo_black/Arrow.cur')
