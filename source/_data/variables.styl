
// Font families.
$font-family-chinese      = "PingFang SC", "Microsoft YaHei"

$font-family-base         = Source Han Sans CN, FZYiHei-M20S, STHeiti, $font-family-chinese, sans-serif

$font-family-headings     = Chalkboard, HanziPenSC-W5, Shrikhand, Ma Shan Zheng, STXingkai, Xingkai SC, cursive

// $font-family-logo         = Shrikhand, Ma Shan Zheng, $font-family-base
